    A1: x = M * (beta to_power (e - p + 1)) & |.M.| <= beta to_power (p-1)
    & eMin - 1 < e & e <= eMax;
    x in NUM by A1;
    hence x in FLOAT_NUMBER(beta, p, eMin, eMax) by XBOOLE_0:def 3;
