theorem Th11:
  for x being Real
  holds x in FLOAT_NUMBER(beta, p, eMin, eMax) iff
  (ex M, e being Integer
  st x = M * (beta to_power (e - p + 1)) & |.M.| <= beta to_power (p-1)
  & eMin - 1 < e & e <= eMax)
proof
  set NUM = {x where x is Real : ex M, e being Integer
   st x = M * (beta to_power (e - p + 1)) & |.M.| <= beta to_power (p-1)
   & eMin - 1 < e & e <= eMax };
  let x be Real;
  thus x in FLOAT_NUMBER(beta, p, eMin, eMax) implies
  (ex M, e being Integer
  st x = M * (beta to_power (e - p + 1)) & |.M.| <= beta to_power (p-1)
  & eMin - 1 < e & e <= eMax)
  proof
    assume A1: x in FLOAT_NUMBER(beta, p, eMin, eMax);
    then x in NUM or x in {+infty, -infty} by XBOOLE_0:def 3;
    then ex y being Real st x = y & ex M, e being Integer
    st y = M * (beta to_power (e - p + 1)) & |.M.| <= beta to_power (p-1)
    & eMin - 1 < e & e <= eMax by TARSKI:def 2;
    hence thesis;
