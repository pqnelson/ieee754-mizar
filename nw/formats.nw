\begin{theorem}
Zero is a floating-point number.
\end{theorem}

<<Theorem: zero is a floating-point number>>=
theorem ThZeroInFloatNumber:
  0 in FLOAT_NUMBER(beta, p, eMin, eMax)
proof
  set NUM = {x where x is Real : ex M, e being Integer
  st x = M * (beta to_power (e - p + 1)) & |.M.| <= beta to_power (p-1)
  & eMin - 1 < e & e <= eMax };
  ex M, e being Integer st 0 = M * (beta to_power (e - p + 1))
  & |.M.| <= beta to_power (p-1) & eMin - 1 < e & e <= eMax
  proof
    set M = 0, e = 0;
    take M, e;
    thus 0 = M * (beta to_power (e - p + 1));
    thus |.M.| <= beta to_power (p-1) by COMPLEX1:44;
    thus eMin - 1 < e;
    thus e <= eMax;
  end;
  then 0 in NUM;
  hence thesis by XBOOLE_0:def 3;
end;
